<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_sd_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_goodsimage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pictureimg" />

    <TextView
        android:id="@+id/tv_goodsname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/iv_goodsimage"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="후라이드 치킨"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_goodsexplain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/iv_goodsimage"
        android:layout_below="@id/tv_goodsname"
        android:ellipsize="end"
        android:text="간장소스의 조화"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_goodsprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="18,000원"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>
</RelativeLayout>
